{
  "name": "hanabijs",
  "version": "0.1.0",
  "description": "lightweight static site generator for typescript",
  "type": "module",
  "main": "build/hanabi-lib.js",
  "bin": {
    "hanabi-build": "build/hanabi-build.js",
    "hanabi-serve": "build/hanabi-serve.js"
  },
  "types": "build/hanabi-lib.d.ts",
  "scripts": {
    "build": "rollup --config rollup.config.ts",
    "dev": "bun run --hot src/cli/serve.ts",
    "site-build": "bun run src/cli/build.ts",
    "check": "biome check ./src ./site",
    "check-write": "biome check --write ./src ./site"
  },
  "author": "osawa naotaka",
  "license": "MIT",
  "homepage": "https://github.com/osawa-naotaka/hanabijs",
  "bugs": {
    "url": "https://github.com/osawa-naotaka/hanabijs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/osawa-naotaka/hanabijs.git"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/bun": "^1.2.4",
    "@types/node": "^22.13.10",
    "rollup": "^4.35.0",
    "rollup-plugin-dts": "^6.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "chokidar": "^4.0.3"
  },
  "packageManager": "yarn@4.7.0"
}
