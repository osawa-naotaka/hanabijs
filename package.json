{
  "name": "hanabijs",
  "version": "0.1.0",
  "description": "lightweight static site generator for typescript",
  "type": "module",
  "main": "build/hanabi-lib.js",
  "bin": {
    "hanabi": "build/hanabi.js"
  },
  "types": "build/hanabi-lib.d.ts",
  "scripts": {
    "build": "tsc && rollup --config rollup.config.ts",
    "dev": "bun run --hot src/bin.ts dev",
    "site": "bun run --hot src/bin.ts build",
    "check": "biome check ./src ./site ./test",
    "check-write": "biome check --write ./src ./site ./test"
  },
  "author": "osawa naotaka",
  "license": "MIT",
  "homepage": "https://github.com/osawa-naotaka/hanabijs",
  "bugs": {
    "url": "https://github.com/osawa-naotaka/hanabijs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/osawa-naotaka/hanabijs.git"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "^1.2.4",
    "@types/node": "^22.13.10",
    "staticseek": "^2.7.1",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2",
    "valibot": "^1.0.0-rc.4"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@rollup/plugin-virtual": "^3.0.2",
    "chokidar": "^4.0.3",
    "esbuild": "^0.25.1",
    "gray-matter": "^4.0.3",
    "prismjs": "^1.30.0",
    "rehype-stringify": "^10.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "remark-toc": "^9.0.0",
    "rollup": "^4.35.0",
    "rollup-plugin-dts": "^6.1.1",
    "unified": "^11.0.5"
  },
  "resolutions": {
    "@types/bun": "1.2.4"
  },
  "packageManager": "yarn@4.7.0"
}
