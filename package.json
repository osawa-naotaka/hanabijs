{
  "name": "zephblaze",
  "version": "0.1.0-alpha.5",
  "description": "lightweight static site generator for typescript",
  "type": "module",
  "main": "build/client/main.js",
  "exports": {
    "./core": {
      "types": "./build/core/main.d.ts",
      "import": "./build/core/main.js",
      "require": "./build/core/main.js"
    },
    "./server": {
      "types": "./build/server/main.d.ts",
      "import": "./build/server/main.js",
      "require": "./build/server/main.js"
    },
    "./jsx-runtime": {
      "types": "./build/jsx-runtime/main.d.ts",
      "import": "./build/jsx-runtime/main.js",
      "require": "./build/jsx-runtime/main.js"
    },
    "./jsx-dev-runtime": {
      "types": "./build/jsx-dev-runtime/main.d.ts",
      "import": "./build/jsx-dev-runtime/main.js",
      "require": "./build/jsx-dev-runtime/main.js"
    }
  },
  "bin": "build/bin.js",
  "scripts": {
    "clean": "rm -rf build dist package.tgz zephblaze-*.tgz",
    "build": "biome check --write ./src ./site ./test && tsc && tsup --config tsup.config.ts",
    "dev": "concurrently \"tsc --watch\" \"tsup --watch --config tsup.config.ts\" \"tsx watch --exclude './site/**/*' --clear-screen=false src/bin.ts dev\"",
    "node-dev": "concurrently \"tsc --watch\" \"tsup --watch --config tsup.config.ts\" \"tsx watch --exclude './site/**/*' --clear-screen=false src/bin.ts dev\"",
    "node-build": "tsc && tsx src/bin.ts build",
    "bun-dev": "concurrently \"tsc --watch\" \"tsup --watch --config tsup.config.ts\" \"bun --hot src/bin.ts dev\"",
    "bun-build": "tsc && bun src/bin.ts build",
    "deno-dev": "deno check ./site/**/*.{ts,tsx} && deno run -A src/bin.ts dev",
    "deno-build": "deno check ./site/**/*.{ts,tsx} && deno run -A src/bin.ts build",
    "check": "biome check --write ./src ./site ./test",
    "pack": "npm pack"
  },
  "author": "osawa naotaka",
  "license": "MIT",
  "homepage": "https://github.com/osawa-naotaka/zephblaze",
  "bugs": {
    "url": "https://github.com/osawa-naotaka/zephblaze/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/osawa-naotaka/zephblaze.git"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^1.0.80",
    "@biomejs/biome": "1.9.4",
    "@types/bun": "^1.2.20",
    "@types/deno": "^2.2.0",
    "@types/node": "^22.13.10",
    "@types/ws": "^8",
    "concurrently": "^9.1.2",
    "staticseek": "^2.7.1",
    "tslib": "^2.8.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@rollup/plugin-virtual": "^3.0.2",
    "@types/jsdom": "^21.1.7",
    "chokidar": "^4.0.3",
    "dompurify": "^3.2.4",
    "esbuild": "^0.25.1",
    "glob": "^11.0.1",
    "gray-matter": "^4.0.3",
    "jsdom": "^26.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "remark-toc": "^9.0.0",
    "rollup": "^4.39.0",
    "svg2woff2": "^0.3.0",
    "tsx": "^4.19.3",
    "unified": "^11.0.5",
    "valibot": "^1.0.0",
    "ws": "^8.18.1"
  },
  "packageManager": "yarn@4.9.1"
}
