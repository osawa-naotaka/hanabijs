{
  "name": "hanabijs",
  "version": "0.1.0",
  "description": "lightweight static site generator for typescript",
  "type": "module",
  "main": "dist/hanabijs-lib.js",
  "bin": {
    "hanabi": "dist/hanabijs-bin.js"
  },
  "scripts": {
    "build": "rollup --config rollup.config.mjs",
    "dev": "bun --hot src/bin.ts dev",
    "site-build": "bun src/bin.ts build",
    "check": "biome check ./src ./site",
    "check-write": "biome check --write ./src ./site"
  },
  "author": "osawa naotaka",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.13.10",
    "@types/ws": "^8",
    "rollup": "^4.35.0",
    "rollup-plugin-dts": "^6.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "glob": "^11.0.1",
    "ws": "^8.18.1"
  },
  "packageManager": "yarn@4.7.0"
}
